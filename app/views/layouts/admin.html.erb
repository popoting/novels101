<!DOCTYPE html>
<html>
    <head>
        <title> Novel Listing </title>
        <%= csrf_meta_tags %>

        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>

    <body>

        <div class="container-fluid">
          <nav class="navbar navbar-expand-lg navbar-light fixed-top" style="background-color: #e3f2fd;">
            <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
              <a class="navbar-brand" href="/">Novel101</a>
              <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                <li class="nav-item active">
                  <a class="nav-link" href="#">我所发表的文章 <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="#">我的收藏</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="#">正在追踪的小说</a>
                </li>
              </ul>
              
                

                 <ul class="dropdown-menu">
                   <% if current_user.admin? %>
                   <li class="dropdonw-item"><%= link_to("Admin Panel", admin_novels_path) %> </li>
                   <% end %>
                  <li class="dropdown-item"> <%= link_to("退出", destroy_user_session_path, method: :delete) %> </li>
                 </ul>
                

          </nav>
          <br>
          <br>
          <br>
          <br>
            <div class="row">
              <div class="col-md-2">
                <ul class="nav flex-column nav-pills" >
   <li class="active nav-link text-light bg-dark"><%= link_to("Novels", admin_novels_path ) %> </li>

</ul>
              </div>

              <div class="col-md-10">
                <%= yield %>
              </div>
           </div>
        </div>

        <%= render "common/footer" %>

    </body>
</html>